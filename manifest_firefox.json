{
  "manifest_version": 2,
  "name": "SensCritique",
  "version": "1.4.2",
  "description": "Permet d'avoir les scores et avis SensCritique sur Netflix/Disney+ et PrimeVideo",
  "icons": {
    "48": "images/logo-48.png",
    "64": "images/logo-64.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "scripts": ["background/index.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*"
      ],
      "js": ["index/index.js"]
    }
  ],
  "permissions": ["*://www.senscritique.com/*", "webRequest"]
}
