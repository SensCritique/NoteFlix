{
  "manifest_version": 2,
  "name": "SensCritique",
  "version": "1.2.11",
  "description": "Permet d'avoir les scores et avis AlloCin√©/SensCritique sur Netflix",
  "icons": {
    "48": "images/logo-48.png",
    "64": "images/logo-64.png",
    "128": "images/logo-128.png"
  },
  "background" : {
    "scripts" : ["background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["index/index.js"]
    }
  ],
  "permissions": [
    "*://www.allocine.fr/*",
    "*://www.senscritique.com/*",
    "webRequest"
  ]
}
