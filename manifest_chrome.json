{
  "manifest_version": 3,
  "name": "SensCritique",
  "version": "1.3.0",
  "description": "Permet d'avoir les scores et avis SensCritique sur Netflix/Disney+/PrimeVideo",
  "icons": {
    "48": "images/logo-48.png",
    "64": "images/logo-64.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*"
      ],
      "js": ["index/index.js"]
    }
  ],
  "host_permissions": ["*://www.senscritique.com/*"]
}
